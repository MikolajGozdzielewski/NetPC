@code {
    [Parameter] public bool IsLoggedIn { get; set; }
    [Parameter] public EventCallback OnLogout { get; set; }
}

@* Zmiana znaczka w lewym górnym rogu oraz dodanie opcji wylogowania *@

<div class="status-bar">
    @if (IsLoggedIn)
    {
        <span>✅ Zalogowany</span>
        <button @onclick="OnLogout">Wyloguj się</button>
    }
    else
    {
        <span>🔒 Niezalogowany</span>
    }
</div>
